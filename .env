# Environment
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000

# Database configuration
DB_HOST=localhost
# DB_PORT=3306
DB_NAME=NodeLearning
DB_USER=root
DB_PASSWORD=root@5word

# JWT configuration
# IMPORTANT: Use a strong, unique secret in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_TOKEN_SECRET=your_super_secure_jwt_secret_key_change_in_production
JWT_ACCESS_TOKEN_EXPIRES_IN=5m

# Refresh token configuration
# CRITICAL: Must be DIFFERENT from JWT_SECRET for security!
# Used to sign 7-day refresh tokens for seamless user experience
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_REFRESH_TOKEN_SECRET=your_super_secure_jwt_refresh_secret_key_change_in_production_must_be_different
# JWT_REFRESH_TOKEN_EXPIRES_IN=7d
JWT_REFRESH_TOKEN_EXPIRES_IN=15m
